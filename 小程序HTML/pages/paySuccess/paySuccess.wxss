page{
  box-shadow:0px 5px 10px 0px rgba(248,238,236,.7) inset;
  background-color: #fef9f8;
}
.weekclassCon{
  padding: 90rpx 40rpx;
}
.wcTitle{
  font-size:30rpx;
  font-family:PingFangSC-Medium;
  color:rgba(51,51,51,1);
  line-height:42rpx;
}
.wcText{
  margin-top: 70rpx;
  font-size:36rpx;
  font-family:PingFangSC-Medium;
  color:rgba(51,51,51,1);
}
.myVideo{
  width: 100%;
  height: 350rpx;
}
.positionB{
  position: fixed;
  bottom: 0;
  left: 0;
}


.paySucPic{
  width: 180rpx;
  height: 180rpx;
}
.psText{
  font-size:36rpx;
  font-family:PingFangSC-Medium;
  color:rgba(255,97,113,1);
}
.font48{
  font-size: 48rpx;
}
.fhtext{
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  color:rgba(102,102,102,1);
  line-height:42px;
}
.button-hover {
  color: #fff !important;
}
.mask{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .4);
  z-index: 9;
}
.payMask{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 583rpx;
  height: 765rpx;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
}
.payMaskHead{
  line-height: 100rpx;
  font-size: 30rpx;
  text-align: center;
  color: #fff;
}
.payTitle{
  font-size: 30rpx;
  text-align: center;
  margin-top: 20rpx;
  color: #FF9966;
}
.paysanjiao{
  margin: 20rpx auto 0;
  border-top: 24rpx solid #FF6666;
  border-left: 14rpx solid transparent;
  border-right: 14rpx solid transparent;
  width: 0;
  height: 0;
}
.payCode{
  width: 264rpx;
  height: 264rpx;
  margin: 20rpx auto 0;
  display: block;
}
.payText{
  text-align: center;
  font-size: 24rpx;
  color: #333;
  margin: 30rpx auto 35rpx;
}
.payMask button{
  width: 438rpx;
  height: 80rpx;
  border-radius: 80rpx;
  color: #fff;
  font-size: 30rpx;
  margin: auto;
}
.payhide{
  display: none
}