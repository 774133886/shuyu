/* pages/weekClass/weekClass.wxss */
page{
  background-color: #fff;
  box-shadow:0px 5px 10px 0px rgba(248,238,236,.7) inset;
}
.weekclassCon{
  padding: 50rpx 40rpx;
}
.wcTitle{
  font-size:30rpx;
  font-family:PingFangSC-Medium;
  color:rgba(51,51,51,1);
  line-height:42rpx;
}
.wcContent{
  width:100%;
  height:auto;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  color:rgba(51,51,51,1);
  line-height:42rpx;
}
.myVideo{
  width: 100%;
  height: 350rpx;
}
.positionB{
  position: fixed;
  bottom: 0;
  left: 0;
}


.maskCenter{
  position: absolute;
  min-height: 480rpx;
  width: 560rpx;
  top:50%;
  left:50%;
  -webkit-transform:translateX(-50%) transLateY(-50%);
  -moz-transform:translateX(-50%) transLateY(-50%);
  -ms-transform:translateX(-50%) transLateY(-50%);
  -o-transform:translateX(-50%) transLateY(-50%);
  transform:translateX(-50%) transLateY(-50%);

}
.maskCtt{
  border-radius: 13rpx;
  background-color: #fff;
  overflow: hidden;
}
.im_foot{
  padding: 50rpx 0;
}
.im_foot cover-image{
  width: 50rpx;
  height: 50rpx;
  display: block;
  margin: auto;
}
.im_btn2{
  width: 380rpx;
  height: 80rpx;
  text-align: center;
  font-size: 36rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  color: #fff !important;
  /* margin: 50rpx auto 50rpx; */
}
.curBg5{
  background: rgba(255,102,102,1) !important;
}
.signBg{
  width: 100%;
  height: 148rpx;
}
.icon_littleBot{
  width: 12rpx;
  height: 12rpx;
  vertical-align: middle;
}
.markArea{
  padding: 0 30rpx;
  margin-top: 30rpx;

}
.whitenormal{
  white-space: normal;
}

.button-hover {
  color: #fff !important;
}
.videoBg{
  width: 100%;
  height: 350rpx;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  background-color: #e5e5e5;
}