/* pages/read/read.wxss */
/* @import "../../wxParse/wxParse.wxss"; */
page{
  background-color: #fef9f8;
  box-sizing: border-box;
  height: 100%;
  -webkit-box-shadow: 0 1px 5px 0 #f8eeec inset;
  box-shadow: 0 1px 5px 0 #f8eeec inset;
}
.allCtt{
  padding: 30rpx 25rpx;
}
.readHead{
  border-radius: 10rpx;
  padding: 35rpx;
  background-color: #fff;
  -webkit-box-shadow: 0 0 16rpx 2rpx rgba(241,124,30,.18);
  box-shadow: 0 0 16rpx 2rpx rgba(241,124,30,.18);
}
.audioBox{
  margin: 20rpx 0 10rpx;
}
.icon-play{
  width: 72rpx;
  height: 72rpx;
  margin-right: 25rpx;
}
.audioLine{
  height: 8rpx;
  border-radius: 8rpx;
  background-color: #fae8e8;
  position: relative;
}
.audioLine view{
  position: absolute;
  top: 0;
  left: 0;
  height: 8rpx;
  border-radius: 8rpx;
  background-color: #fe424c;
}
.read_btn{
  margin: 30rpx 25rpx;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 90rpx;
  color: #fff !important;
  font-size: 36rpx;
}
.readBtm{
  margin-top: 60rpx;
}
.taskItem{
  padding: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  position: relative;
  -webkit-box-shadow: 0 0 16rpx 2rpx rgba(241,124,30,.18);
  box-shadow: 0 0 16rpx 2rpx rgba(241,124,30,.18);
  margin: 20rpx 0 50rpx;
}
.icon-voice{
  width: 50rpx;
  height: 50rpx;
}
.allHeight{
  height: 100%;
}


.desk_done{
  width: 138rpx;
  height: 139rpx;
  position: absolute;
  right: 40rpx;
  bottom: -35rpx;

}
.markBox{
  z-index: 999
}
.maskCenter{
  position: absolute;
  min-height: 480rpx;
  width: 560rpx;
  top:50%;
  left:50%;
  -webkit-transform:translateX(-50%) transLateY(-50%);
  -moz-transform:translateX(-50%) transLateY(-50%);
  -ms-transform:translateX(-50%) transLateY(-50%);
  -o-transform:translateX(-50%) transLateY(-50%);
  transform:translateX(-50%) transLateY(-50%);

}
.maskCtt{
  border-radius: 13rpx;
  background-color: #fff;
  overflow: hidden;
}
.im_foot{
  padding: 50rpx 0;
}
.im_foot cover-image{
  width: 50rpx;
  height: 50rpx;
  display: block;
  margin: auto;
}
.im_btn2{
  width: 380rpx;
  height: 80rpx;
  text-align: center;
  font-size: 36rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  color: #fff !important;
  /* margin: 50rpx auto 50rpx; */
}
.curBg5{
  background: rgba(255,102,102,1) !important;
}
.signBg{
  width: 100%;
  height: 148rpx;
}
.icon_littleBot{
  width: 12rpx;
  height: 12rpx;
  vertical-align: middle;
}
.markArea{
  padding: 0 30rpx;
  margin-top: 30rpx;

}
.whitenormal{
  white-space: normal;
}

.button-hover {
  color: #fff !important;
}
.videoBg{
  width: 100%;
  height: 350rpx;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  background-color: #e5e5e5;
}
.overflow_hidden{
  overflow: hidden;
}
.imgCtt{
  position: absolute;
  top: 0;
  right: 0;
  width: 150rpx;
  height: 100%;
}
.imgCtt image{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}