/* pages/taskList/taskList.wxss */
page{
  background-color: #fef9f8;
  box-sizing: border-box;
  height: 100%;
  padding: 30rpx 25rpx;
  -webkit-box-shadow: 0 1px 5px 0 #f8eeec inset;
  box-shadow: 0 1px 5px 0 #f8eeec inset;
}
.taskHead{
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  -webkit-box-shadow: 0 0 16rpx 2rpx rgba(241,124,30,.18);
  box-shadow: 0 0 16rpx 2rpx rgba(241,124,30,.18);
  z-index: 11;
}
.taskHead text.th_title{
  display: block;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  font-size: 36rpx;
  color: #fff;
}
.taskHead scroll-view{
  height: 360rpx;
  overflow-y: auto;
}
.th_text{
  padding: 35rpx;
  font-size: 28rpx;
  color: #333;
  display: block;
}
.taskList{
  padding-left: 20rpx;
}
.tl_tit{
  height: 110rpx;
}
.icon-task{
  width: 38rpx;
  height: 44rpx;
  display: block;
  margin-top: -3rpx;
}
.tl_btn{
  width: 140rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 50rpx;
  font-size: 24rpx;
  color: #fff !important;
}
.icon-com{
  width: 35rpx;
  height: 35rpx;
  margin-right: 2rpx;
}
.taskItem{
  padding: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin-left: 40rpx;
  position: relative;
  -webkit-box-shadow: 0 0 16rpx 2rpx rgba(241,124,30,.18);
  box-shadow: 0 0 16rpx 2rpx rgba(241,124,30,.18);
}
.icon-arrow-left{
  position: absolute;
  top: calc(50% -14rpx);
  left: calc(-35rpx + 1px);
  width: 35rpx;
  height: 29rpx;
}
.icon-voice{
  width: 50rpx;
  height: 50rpx;
}
.taskCtt .m-b-30:first-child:before,.taskCtt .m-b-30:last-child:after{
  display: none;
}
.taskCtt .m-b-30:before{
  content: '';
  position: absolute;
  top: -15rpx;
  left: 15rpx;
  height: calc(50% - 15rpx);
  border-left: 1px solid #d2d2d2;
  -webkit-transform: scaleX(0.5);
  transform: scaleX(0.5);
  z-index: 11;
}
.taskCtt .m-b-30:after{
  content: '';
  position: absolute;
  bottom: -15rpx;
  left: 15rpx;
  height: calc(50% - 15rpx);
  border-left: 1px solid #d2d2d2;
  -webkit-transform: scaleX(0.5);
  transform: scaleX(0.5);
  z-index: 11;
}
.icon-right{
  width: 15rpx;
  height: 26rpx;
  margin-right: 10rpx;
}


.desk_done{
  width: 138rpx;
  height: 139rpx;
  position: absolute;
  right: 40rpx;
  bottom: -35rpx;

}
.markBox{
  z-index: 999
}
.maskCenter{
  position: absolute;
  min-height: 480rpx;
  width: 560rpx;
  top:50%;
  left:50%;
  -webkit-transform:translateX(-50%) transLateY(-50%);
  -moz-transform:translateX(-50%) transLateY(-50%);
  -ms-transform:translateX(-50%) transLateY(-50%);
  -o-transform:translateX(-50%) transLateY(-50%);
  transform:translateX(-50%) transLateY(-50%);

}
.maskCtt{
  border-radius: 13rpx;
  background-color: #fff;
  overflow: hidden;
}
.im_foot{
  padding: 50rpx 0;
}
.im_foot cover-image{
  width: 50rpx;
  height: 50rpx;
  display: block;
  margin: auto;
}
.im_btn2{
  width: 380rpx;
  height: 80rpx;
  text-align: center;
  font-size: 36rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  color: #fff !important;
  /* margin: 50rpx auto 50rpx; */
}
.curBg5{
  background: rgba(255,102,102,1) !important;
}
.signBg{
  width: 100%;
  height: 148rpx;
}
.icon_littleBot{
  width: 12rpx;
  height: 12rpx;
  vertical-align: middle;
}
.markArea{
  padding: 0 30rpx;
  margin-top: 30rpx;

}
.whitenormal{
  white-space: normal;
}

.button-hover {
  color: #fff !important;
}
.videoBg{
  width: 100%;
  height: 350rpx;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  background-color: #e5e5e5;
}
.overflow_hidden{
  overflow: hidden;
}
.imgCtt{
  position: absolute;
  top: 0;
  right: 0;
  width: 150rpx;
  height: 100%;
}
.imgCtt image{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}